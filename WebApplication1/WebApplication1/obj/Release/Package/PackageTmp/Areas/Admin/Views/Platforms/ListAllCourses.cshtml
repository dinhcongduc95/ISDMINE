@model IEnumerable<WebApplication1.Models.Course>
@{
    ViewBag.Title = "ListAllCourse";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>ListAllCourse</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Introduction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TuitionFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryTestXml)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeLimit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PassMark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageLink)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Introduction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TuitionFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryTestXml)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageLink)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseId, controller = "Courses" }) |
                @Html.ActionLink("Details", "Details", new { id = item.CourseId, controller = "Courses" }) |
                @Html.ActionLink("Delete", "Delete", new {id = item.CourseId, controller = "Courses" }) |
                @Html.ActionLink("Remove", "RemoveFromPlatform", new { id = item.CourseId, platformId = ViewBag.PlatformId })
            </td>
        </tr>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</table>
