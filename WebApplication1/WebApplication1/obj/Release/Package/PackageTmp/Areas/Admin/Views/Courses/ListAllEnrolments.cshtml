@model IEnumerable<WebApplication1.Models.Enrolment>
@{
    ViewBag.Title = "ListAllEnrolments";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2> @ViewBag.CourseName / All Enrolments</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsValid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsValid)
            </td>
            <td>
                @((item.Course != null) ? item.Course.Name : "")
            </td>
            <td>
                @((item.User != null) ? item.User.UserName : "")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.EnrolmentId, controller = "Enrolments" }) |
                @Html.ActionLink("Details", "Details", new {id = item.EnrolmentId, controller = "Enrolments" }) |
                @Html.ActionLink("Delete", "Delete", new {id = item.EnrolmentId, controller = "Enrolments" }) |                
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
