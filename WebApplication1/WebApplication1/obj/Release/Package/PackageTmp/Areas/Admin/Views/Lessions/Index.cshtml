@model IEnumerable<WebApplication1.Models.Lession>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lí bài giảng</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YoutubeLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageLink)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @(item.Course != null ? item.Course.Name : "")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YoutubeLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageLink)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LesionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LesionId }) |
            @Html.ActionLink("Delete", "Delete", new {id = item.LesionId}) |            
            @Html.ActionLink("Comments", "ListAllComments", new { id = item.LesionId})  |
           @Html.ActionLink("Testts", "ListAllTests", new { id = item.LesionId })
        </td>
    </tr>
}

</table>
