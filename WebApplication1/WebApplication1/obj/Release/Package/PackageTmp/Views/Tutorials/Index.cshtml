@using WebApplication1.Models
@model ICollection<WebApplication1.Models.Tutorial>
@{
    ViewBag.Title = "Tutorials";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Index</h2>
    <h2 class="text-center">Các Tutorial Hiện Tại</h2>
    @foreach (Tutorial tutorial in Model)
    {
        <div class="col-lg-6" >
            <h3 class="text-info text-center">@tutorial.Name</h3>
            @Html.Raw(tutorial.Content)
        </div>        
    }
</div>


