@using WebApplication1.Models

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

<!-- Page Content -->
<div class="container" style="margin-top: 71px;">

    <!-- Heading Row -->
    <div class="row">
        
    </div>
    <!-- /.row -->

    <hr>

    <!-- Call to Action Well -->
    <div class="row">
        <div class="col-lg-12">
            <div class="well text-center">
                <h1>Danh sách các bài học cho khóa học: @ViewBag.CourseName</h1>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


    
    <!-- Content Row -->
    <div class="row">
        @foreach (var lession in (List<Lession>)ViewBag.Lessions)
        {
            <div class="col-md-4">
                <h2>@lession.Name</h2>
                <p>@lession.Description</p>                
                <a class="btn btn-default" href="../Lession/Index?id=@lession.LesionId">More Info</a>
            </div>
        }
        
       
    </div>
    <!-- /.row -->
    

    <hr>


</div>