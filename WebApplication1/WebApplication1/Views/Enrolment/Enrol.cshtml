@using Microsoft.AspNet.Identity
@using WebApplication1.Models

@{
    ViewBag.Title = "Enrolment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Course theCourse = ViewBag.Course;
}

<h2>Enrolment</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label for="courseId">Course Id: </label>
            </div>
            <div class="col-md-7">
                <input class="form-control" id="courseId" type="text" name="courseId" value="@theCourse.Id" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label for="courseName">Course Name: </label>
            </div>
            <div class="col-md-7">
                <input class="form-control" id="courseName" type="text" name="courseName" value="@theCourse.Name" readonly>    
            </div>            
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label for="courseIntro">Course Intro: </label>
            </div>
            <div class="col-md-7">
                <input class="form-control" id="readonlyInput" type="text" name="courseIntro" value="@theCourse.Intrduction" readonly>
            </div>         
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label for="startDate">Start Date: </label>
            </div>
            <div class="col-md-7">
                <input class="form-control" id="startDate" type="text" name="startDate" value="@DateTime.Now.ToShortDateString()" readonly>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label for="courseIntro">End Date: </label>
            </div>
            <div class="col-md-7">
                <input class="form-control" id="endDate" type="text" name="endDate" value="@DateTime.Now.AddDays(30).ToShortDateString()" readonly>
            </div>
        </div>
    </div>
    <div class="row">        
        <div class="form-group">
            <div class="col-md-3">
                <label for="userName">UserName: </label>
            </div>
            <div class="col-md-7">
                <input class="form-control" id="userName" type="text" name="userName" value="@User.Identity.Name" readonly>
            </div>            
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label for="userId">User Id: </label>
            </div>
            <div class="col-md-7">
                <input class="form-control" id="userId" type="text" name="userId" value="@User.Identity.GetUserId()" readonly>
            </div>  
        </div>
    </div>
    


    <input type="submit" value="Enrol Now" class="btn btn-default" />

}