                '<button type="submit" class="btn btn-success green"><i class="fa fa-share"></i> Share</button>' +
                '</div><!-- Status Upload -->' +
                '</div><!-- Widget Area -->' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</li>';


            $('#commentDiv').append(htmlContent);
        });

        request.fail(function(textStatus) {
            alert("Request failed: " + textStatus);
        });
         
    }
</script>