            </div>
        </div>

        <hr />

        <div class="row text-center">
            <h4>Your Courses</h4>
            @Html.ActionLink("Các khóa học của bạn", "YourCourse", new {controller = "Course"}, new {@class= "btn btn-warning btn-lg" })           
        </div>

        <hr />
    </div>

</div>
